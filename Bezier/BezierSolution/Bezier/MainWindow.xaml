<Window x:Class="Bezier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bezier"
        mc:Ignorable="d"
        Title="https://designermanuals.blogspot.com - Bezier - MainWindow" Height="450" Width="800">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"></RowDefinition>
            <RowDefinition Height="33*"></RowDefinition>
            <RowDefinition Height="34*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="buttonBezier" Content="Кривая Бизье" Margin="-365,60,90,49" Click="ButtonBezier_Click"/>
        <Button x:Name="buttonBezierCast" Content="Кривая Бизье (Метод де Кастельжо)" HorizontalAlignment="Left" Margin="90,60,-365,44" Width="275" Click="ButtonBezierCast_Click"/>
    </Grid>
</Window>
